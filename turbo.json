{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "./.env"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_APP_URL"]
    },
    "prod": {
      "dependsOn": ["build"],
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_APP_URL"]
    }
  }
}
